<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-sm-8 blog-main">
		<p class="blog-post-meta">Date:
			<%= @post.created_at.to_date %>
		</p>

		<h2 class="blog-post-title">Title:
			<%= @post.title %>
		</h2>

		<p>
			<strong>Body:</strong>
			<%= @post.body %>
		</p>
	</div>
</div>	
<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>




  
